<resources>

    <style name="MeuEstilo" parent="Estilo.Base"/>

    <style name="Estilo.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="drawerArrowStyle">@style/CorMenuHamburguer</item>
    </style>

    <style name="CorMenuHamburguer" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
        <item name="homeAsUpIndicator">@drawable/ic_navigation_menu</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_navigation_menu</item>
    </style>


</resources>
